# EditorConfig configuration for Privacy-Preserving Agent Fine-Tuner
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonl}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2

[*.{toml,cfg,ini}]
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.sql]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{dockerfile,Dockerfile*}]
indent_size = 2

[*.{proto,protobuf}]
indent_size = 2

[*.{xml,svg}]
indent_size = 2
EOF < /dev/null
