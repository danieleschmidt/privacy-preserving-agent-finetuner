root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{toml,cfg,ini}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 4

[Dockerfile*]
indent_size = 4

[.github/workflows/*.{yml,yaml}]
indent_size = 2