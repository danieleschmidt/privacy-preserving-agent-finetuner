# Privacy Configuration
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=1e-5
PRIVACY_MAX_GRAD_NORM=1.0
PRIVACY_NOISE_MULTIPLIER=0.5
PRIVACY_ACCOUNTING_MODE=rdp

# Model Configuration
MODEL_NAME=meta-llama/Llama-2-7b-hf
MODEL_CACHE_DIR=./models
MODEL_MAX_LENGTH=2048
MODEL_BATCH_SIZE=8
MODEL_LEARNING_RATE=5e-5

# Training Configuration
TRAINING_EPOCHS=3
TRAINING_WARMUP_STEPS=100
TRAINING_MAX_STEPS=1000
TRAINING_GRADIENT_ACCUMULATION_STEPS=4
TRAINING_SAVE_STEPS=500
TRAINING_EVAL_STEPS=250

# Hardware Security
SECURE_COMPUTE_PROVIDER=aws_nitro
SECURE_COMPUTE_ATTESTATION_REQUIRED=true
SGX_ENCLAVE_SIZE=512MB
NITRO_ENCLAVE_CPU_COUNT=2
NITRO_ENCLAVE_MEMORY_MB=1024

# Federated Learning
FEDERATED_ENABLED=false
FEDERATED_MIN_CLIENTS=5
FEDERATED_AGGREGATION_METHOD=secure_sum
FEDERATED_ROUNDS=10
FEDERATED_CLIENT_FRACTION=0.1

# Context Protection
CONTEXT_GUARD_ENABLED=true
CONTEXT_PII_REMOVAL=true
CONTEXT_ENTITY_HASHING=true
CONTEXT_SEMANTIC_ENCRYPTION=false
CONTEXT_K_ANONYMITY=5
HASH_SALT=your-secure-salt-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/privacy_finetuner
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_TIMEOUT=300
API_MAX_REQUEST_SIZE=100MB
API_RATE_LIMIT=100

# Authentication
AUTH_SECRET_KEY=your-super-secret-key-here
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc
SENTRY_DSN=
OPENTELEMETRY_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Storage Configuration
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./data
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=privacy-finetuner-data
GCS_PROJECT_ID=
GCS_BUCKET=privacy-finetuner-data
AZURE_STORAGE_CONNECTION_STRING=

# Privacy Budget Monitoring
BUDGET_ALERT_THRESHOLD=0.8
BUDGET_EXPORT_ENABLED=true
BUDGET_EXPORT_INTERVAL=3600
PRIVACY_DASHBOARD_ENABLED=true

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CSRF_SECRET_KEY=your-csrf-secret-key
SESSION_SECRET_KEY=your-session-secret-key

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false
PROFILING_ENABLED=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_privacy_finetuner
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_WORKERS=auto
COVERAGE_MIN_PERCENTAGE=80

# Compliance and Auditing
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
COMPLIANCE_EXPORT_ENABLED=true
GDPR_COMPLIANCE_MODE=true
HIPAA_COMPLIANCE_MODE=false

# Performance Tuning
WORKER_PROCESSES=4
WORKER_THREADS=2
ASYNC_POOL_SIZE=100
CACHE_TTL=3600
BATCH_PROCESSING_SIZE=32
GPU_MEMORY_FRACTION=0.8

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
DISASTER_RECOVERY_ENABLED=false

# Third-party Integrations
WEIGHTS_AND_BIASES_API_KEY=
MLFLOW_TRACKING_URI=http://localhost:5000
NEPTUNE_API_TOKEN=
HUGGINGFACE_TOKEN=
OPENAI_API_KEY=

# Environment
ENVIRONMENT=development
SERVICE_NAME=privacy-preserving-agent-finetuner
SERVICE_VERSION=0.1.0
DEPLOYMENT_ID=local-dev